{
  "name": "ai-personal-assistant",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run webhook:dev && npm run db:generate && next dev",
    "dev:no-webhook": "next dev",
    "build": "npm run webhook:build && npm run db:generate && next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "setup": "npm run db:push && npm run db:generate",
    "notifications": "tsx src/scripts/run-notifications.ts",
    "webhook:setup": "tsx src/scripts/webhook-setup.ts",
    "webhook:dev": "tsx src/scripts/webhook-setup.ts",
    "webhook:build": "tsx src/scripts/webhook-setup.ts",
    "webhook:delete": "tsx src/scripts/webhook-setup.ts --delete",
    "webhook:verify": "tsx src/scripts/webhook-setup.ts --verify",
    "tunnel:ngrok": "echo '1. Run: ngrok http 3000' && echo '2. Copy the https URL' && echo '3. Use: WEBHOOK_URL=https://your-ngrok-url.ngrok.io npm run dev'"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@prisma/client": "^6.12.0",
    "@types/redis": "^4.0.11",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "next": "15.4.4",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.64.0",
    "openai": "^5.10.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "redis": "^5.6.1",
    "tsx": "^4.20.3",
    "twilio": "^5.8.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "prisma": "^6.12.0",
    "typescript": "^5"
  }
}
